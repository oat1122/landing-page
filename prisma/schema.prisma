// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Model สำหรับ NextAuth + Custom User
model User {
  id            String    @id @default(uuid())
  username      String    @unique
  password      String    // Hash ด้วย bcryptjs
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // USER, ADMIN

  accounts Account[]
  sessions Session[]
  images   Image[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

// Models สำหรับ NextAuth Adapter
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtoken")
}

// Model สำหรับ Image Upload พร้อม SEO
model Image {
  id          String   @id @default(uuid())
  
  // File Information
  filename    String               // ชื่อไฟล์ original
  filepath    String   @unique     // path เก็บไฟล์
  url         String               // URL สำหรับ access รูป
  mimeType    String               // image/jpeg, image/png, image/webp
  size        Int                  // ขนาดไฟล์ (bytes)
  width       Int?                 // ความกว้าง (pixels)
  height      Int?                 // ความสูง (pixels)
  
  // SEO Fields
  alt         String               // Alt text สำหรับ accessibility & SEO
  title       String?              // Title attribute
  caption     String?  @db.Text    // คำอธิบายรูปภาพ
  description String?  @db.Text    // รายละเอียดเพิ่มเติม
  
  // Organization
  category    String?              // หมวดหมู่ เช่น "product", "blog", "banner"
  tags        String?  @db.Text    // Tags คั่นด้วย comma
  
  // Usage Tracking
  usedIn      String?  @db.Text    // Where this image is used (JSON)
  
  // Metadata
  uploadedBy  String?              // User ID ที่อัพโหลด
  user        User?    @relation(fields: [uploadedBy], references: [id], onDelete: SetNull)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([category])
  @@index([uploadedBy])
  @@map("image")
}
